<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Movimentações</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-danger text-white">
    <div class="container my-5">
        <h1 class="text-center mb-4">Lista de Movimentações</h1>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered bg-white text-danger">
                <thead class="table-danger text-white">
                    <tr>
                        <th>Data</th>
                        <th>Produto</th>
                        <th>Quantidade</th>
                        <th>Tipo</th>
                    </tr>
                </thead>
                <tbody>
                    <% movimentacoes.forEach(movimentacao => { %>
                        <tr>
                            <td><%= movimentacao.data_movimentacao %></td>
                            <td><%= movimentacao.produto ? movimentacao.produto.nome_produto : 'Produto não encontrado' %></td>
                            <td><%= movimentacao.quantidade %></td>
                            <td><%= movimentacao.tipo_movimentacao %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>